---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const resources = [
  {
    title: "Local Support Groups",
    items: [
      {
        name: "Catholic Hospice Bereavement Support",
        contact: "(305) 822-2380",
        details: "Weekly support groups and individual counseling"
      },
      {
        name: "VITAS Healthcare Grief Support",
        contact: "(305) 374-4143",
        details: "Free grief support groups and counseling services"
      },
      {
        name: "Seasons Hospice Miami",
        contact: "(305) 762-9140",
        details: "Grief support programs for adults and children"
      }
    ]
  },
  {
    title: "Online Resources",
    items: [
      {
        name: "GriefShare",
        website: "www.griefshare.org",
        details: "Find local support groups and online resources"
      },
      {
        name: "What's Your Grief",
        website: "www.whatsyourgrief.com",
        details: "Educational articles and online support"
      },
      {
        name: "The Compassionate Friends",
        website: "www.compassionatefriends.org",
        details: "Support for families after the death of a child"
      }
    ]
  }
];

const helplines = [
  {
    name: "National Grief Support Helpline",
    phone: "1-800-445-4808",
    hours: "24/7"
  },
  {
    name: "Crisis Text Line",
    phone: "Text HOME to 741741",
    hours: "24/7"
  }
];
---

<Layout 
  title="Grief Support"
  description="Connect with local grief support resources in Miami">
  <PageHeader
    title="Grief Support Resources"
    description="Find support groups, counseling services, and resources to help you through your grief journey"
  />

  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-12">
      {resources.map(category => (
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold mb-4">{category.title}</h2>
          <div class="space-y-4">
            {category.items.map(item => (
              <div class="border-b border-gray-100 pb-4 last:border-0">
                <h3 class="font-medium">{item.name}</h3>
                {item.contact && <p class="text-blue-600">{item.contact}</p>}
                {item.website && <p class="text-blue-600">{item.website}</p>}
                <p class="text-gray-600 text-sm">{item.details}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-12">
      <h2 class="text-xl font-semibold mb-4">24/7 Crisis Support</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {helplines.map(helpline => (
          <div class="bg-white p-4 rounded-lg">
            <h3 class="font-medium">{helpline.name}</h3>
            <p class="text-blue-600 font-bold">{helpline.phone}</p>
            <p class="text-sm text-gray-600">Available {helpline.hours}</p>
          </div>
        ))}
      </div>
    </div>

    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Professional Help</h2>
      <p class="text-gray-700 mb-4">
        If you're struggling with grief, remember that seeking professional help is a sign of strength, 
        not weakness. Licensed grief counselors can provide specialized support for your unique situation.
      </p>
      <a href="#" class="text-blue-600 hover:underline">
        Find a Licensed Grief Counselor in Miami â†’
      </a>
    </div>
  </div>
</Layout>